#: include kv/homescreen.kv
#: include kv/settingsscreen.kv
#: include kv/loginscreen.kv
#: include kv/signupscreen.kv
#: include kv/firstscreen.kv
#: include kv/forgotpasswordscreen.kv

GridLayout:
    cols: 1
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#f2f2e9")
        Rectangle:
            size: self.size
            pos: self.pos
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        Image:
            source: r"C:\\Users\\gtm24_y457pwa\\PycharmProjects\\mobileapp\\asseets//logo.png"
            pos_hint: {"center_x": .50, "center_y": .65}

        Button:
            text: "Login"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .35}
            background_color: 0, 0, 0, 0
            on_release:
                app.change_screen("login_screen")
            canvas.before:
                Color:
                    rgb: rgba(0, 146, 254, 0.8)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius:[5]

        Button:
            text: "Signup"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .22}
            background_color: 0, 0, 0, 0
            on_release:
                app.change_screen("signup_screen")
            canvas.before:
                Color:
                    rgb: rgba(0, 146, 254, 0.8)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius:[5]

        ScreenManager:
            pos_hint: {"top": 0.95 , "left": 1}
            size_hint: 1,0.9
            id: screen_manager
            HomeScreen:
                id: home_screen
                name: "home_screen"
            FirstScreen:
                id: first_screen
                name: "first_screen"
            LoginScreen:
                id: login_screen
                name: "login_screen"

            SignUpScreen:
                id: signup_screen
                name: "signup_screen"
            SettingsScreen:
                id: settings_screen
                name: "settings_screen"
            ForgotPasswordScreen:
                id: forgot_password_screen
                name: "forgot_password_screen"
