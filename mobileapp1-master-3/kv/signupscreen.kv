#: import utils kivy.utils

<SignUpScreen>

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 2
        MDIconButton
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                app.change_screen("first_screen")
        MDLabel:
            text: "Hi !"
            font_size: "26sp"
            pos_hint: {"center_x": .6, "center_y": .85}
            color: rgba(0, 0, 59, 255)
        MDLabel:
            text: "Please create an account"
            font_size: "22sp"
            pos_hint: {"center_x": .6, "center_y": .79}
            color: rgba(135, 133, 195, 255)
    MDFloatLayout:
        size_hint: .7, .07
        pos_hint: {"center_x": .5, "center_y": .68}
        TextInput:
            id: signup_username
            hint_text: "Username"
            size_hint_y: .95
            pos_hint: {"center_x": .43, "center_y": .5}
            background_color: 1, 1, 1, 0
            foreground_color: rgba(135, 133, 195, 255)
            cursor_color: rgba(135, 133, 195, 255)
            font_size: "18sp"
            cursor_width: "2sp"
            multiline: False
        MDFloatLayout:
            pos_hint: {"center_x": .43, "center_y": .0}
            size_hint_y: .03
            md_bg_color: rgba(135, 133, 195, 255)
    MDFloatLayout:
        size_hint: .7, .07
        pos_hint: {"center_x": .5, "center_y": .56}
        TextInput:
            id: signup_email
            hint_text: "Email"
            helper_text: "example@gmail.com"
            helper_text_mode: "on_error"
            size_hint_y: .95
            pos_hint: {"center_x": .43, "center_y": .5}
            background_color: 1, 1, 1, 0
            foreground_color: rgba(135, 133, 195, 255)
            cursor_color: rgba(135, 133, 195, 255)
            font_size: "21sp"
            cursor_width: "4sp"
            multiline: False
        MDFloatLayout:
            pos_hint: {"center_x": .43, "center_y": 0}
            size_hint_y: .03
            md_bg_color: rgba(135, 133, 195, 255)

    MDFloatLayout:
        size_hint: .7, .07
        pos_hint: {"center_x": .5, "center_y": .45}
        TextInput:
            id: signup_password
            hint_text: "Password"
            size_hint_y: .95
            pos_hint: {"center_x": .43, "center_y": .5}
            background_color: 1, 1, 1, 0
            foreground_color: rgba(135, 133, 195, 255)
            cursor_color: rgba(135, 133, 195, 255)
            font_size: "21sp"
            cursor_width: "4sp"
            multiline: False
            password: True
        MDIconButton:
            icon: "eye-off"
            pos_hint: {"center_y": .5, "center_x": .9}
            pos: signup_password.width - self.width + dp(8), 0
            theme_text_color: "Hint"
            on_release:
                self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                signup_password.password = False if signup_password.password is True else True
        MDFloatLayout:
            pos_hint: {"center_x": .43, "center_y": .0}
            size_hint_y: .03
            md_bg_color: rgba(135, 133, 195, 255)
    Button:
        text: "Signup"
        size_hint: .66, .065
        font_size: "25sp"
        pos_hint: {"center_x": .45, "center_y": .34}
        background_color: 0, 0, 0, 0
        canvas.before:
            Color:
                rgb: rgba(0, 146, 254, 0.8)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius:[5]
        on_release:
            app.my_firebase.sign_up(signup_username.text , signup_email.text , signup_password.text)

        on_release:
            app.change_screen("login_screen")

    MDLabel:
        text: "Already have an account?"
        pos_hint: {"center_x": .54, "center_y": .24}
        color: rgba(68, 78, 132, 255)
        font_size: "17sp"
    MDTextButton:
        text: "Sign in"
        font_size: "17sp"
        pos_hint: {"center_x": .75, "center_y": 0.24}
        color: rgba(52, 0, 231, 255)
        on_release:
            app.change_screen("login_screen")

    Label:
        size_hint: 0.8,0.1
        pos_hint: {"top": 0.2 , "right": 0.9}
        markup: True
        id: signup_screen

