#: import utils kivy.utils

<ForgotPasswordScreen>:
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 2
        MDIconButton
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                app.change_screen("login_screen")
        MDLabel:
            text: "Enter your email to reset password !"
            font_size: "22sp"
            pos_hint: {"center_x": .6, "center_y": .70}
            color: rgba(0, 0, 59, 255)

        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .47,"center_y": .57}
            MDTextField:
                id: forgot_email
                hint_text: "Email"
                color_mode: "custom"
                helper_text: "example@gmail.com"
                required: True
                helper_text_mode: "on_error"
                size_hint_y: .95
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint_y: None
                width: 400
                font_size: 21
                line_color_normal: 178, 178, 178, 255
                line_color_focus: 178, 178, 178, 255
            MDFloatLayout:
                pos_hint: {"center_x": .47, "center_y": .0}
                size_hint_y: .03
                md_bg_color: rgba(178, 178, 178, 255)


        Button:
            text: "Send reset link"
            size_hint: .66, .065
            font_size: "22sp"
            pos_hint: {"center_x": .45, "center_y": .44}
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgb: rgba(0, 146, 254, 0.8)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius:[5]
            on_release:
                app.my_firebase.forgot_password(forgot_email.text)

        Label:
            size_hint: 0.8,0.1
            pos_hint: {"top": 0.3 , "right": 0.9}
            markup: True
            id: forgot_message

